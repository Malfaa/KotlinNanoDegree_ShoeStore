<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="shoe_detail">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/shoedetail_font_size</item>
    </style>


    <style name="welcome_text">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/fragment_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/fragment_vertical_margin</item>
        <item name="android:layout_marginStart">@dimen/fragment_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/fragment_horizontal_margin</item>
        <item name="android:textColor">@color/black</item>

    </style>
    <style name="login_centralized_elements">
        <item name="android:layout_marginTop">@dimen/distance_login</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/distance_login</item>
        <item name="android:layout_marginStart">@dimen/distance_login</item>
        <item name="android:layout_marginEnd">@dimen/distance_login</item>
    </style>


    <style name="login_elements">
        <item name="android:layout_marginTop">@dimen/distance_login</item>
        <item name="android:layout_marginBottom">@dimen/distance_login</item>
        <item name="android:layout_marginStart">@dimen/distance_login</item>
        <item name="android:layout_marginEnd">@dimen/distance_login</item>
    </style>

    <style name="floatingStyle" parent="ShapeAppearanceOverlay.Material3.FloatingActionButton">
        <item name="android:layout_marginEnd">@dimen/floatingEnd</item>
        <item name="android:layout_marginBottom">@dimen/floatingBottom</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="item" >
        <item name="fontFamily">@font/droid_sans</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
